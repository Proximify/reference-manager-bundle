{
    "name": "proximify/reference-manager-bundle",
    "type": "symfony-bundle",
    "description": "Reference manager bundle is software for scholars and authors to use for recording and utilising bibliographic citations.",
    "authors": [
        {
            "name": "Mert Metin",
            "email": "mert@proximify.ca"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "symfony/http-kernel": "^5.1",
        "doctrine/orm": "^2.7"        
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5@dev"
    },
    "autoload": {
        "psr-4": {
            "Proximify\\ReferenceManagerBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Proximify\\ReferenceManagerBundle\\Tests\\": "/Tests/"
        }
    }
}